---
import HeaderButton from "./HeaderButton.astro"
import Counter from "./counter"

console.log('javascript')
---

<!-- Con transition:persist mantiene la persistencia del componente Counter o lo que lleve dentro -->
<header transition:persist class="py-8 px-4 mx-auto max-w-xl lg:py16 lg:px-6">
    <div class="mx-auto text-center mb-8 lg:mb-16">
        <h2 class="mb-4 text-5xl tracking-tight font-extrabold text-white">
            SpaceX Launches
        </h2>
        <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">
            A list of SpaceX launches from the past and future.
        </p>
    </div>

    <!-- Debemos indicar directiva de carga para que funcione el JS -->
    <Counter client:visible  />

    <nav class="flex flex-col items-center justify-between w-full text-center md:flex-row">
        <HeaderButton class="text-white" href="/">
            <svg
                slot="before-text" 
                width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M4 13a8 8 0 0 1 7 7a6 6 0 0 0 3 -5a9 9 0 0 0 6 -8a3 3 0 0 0 -3 -3a9 9 0 0 0 -8 6a6 6 0 0 0 -5 3" />
                <path d="M7 14a6 6 0 0 0 -3 6a6 6 0 0 0 6 -3" />
                <path d="M15 9m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
              </svg>
              Ultimos lanzamientos
            </HeaderButton>
        <HeaderButton class="text-white" href="/">
            <svg 
                slot="after-text"
                width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" />
                <path d="M12 9h.01" />
                <path d="M11 12h1v4h1" />
              </svg>
            Sobre el proyecto</HeaderButton>
        <HeaderButton class="text-white" href="/oldest">
            <svg
                slot="before-text" 
                width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M4 13c.325 2.532 1.881 4.781 4 6" />
                <path d="M20 11a8.1 8.1 0 0 0 -15.5 -2" />
                <path d="M4 5v4h4" />
                <path d="M12 15h2a1 1 0 0 1 1 1v1a1 1 0 0 1 -1 1h-1a1 1 0 0 0 -1 1v1a1 1 0 0 0 1 1h2" />
                <path d="M18 15v2a1 1 0 0 0 1 1h1" />
                <path d="M21 15v6" />
              </svg>
            Los mas viejos
        </HeaderButton>
    </nav>
</header>